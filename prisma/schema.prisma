generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Profile {
    id         Int      @id @default(autoincrement())
    name       String
    bio        String?
    user       User     @relation(fields: [userId], references: [id])
    userId     Int
    campaign   Campaign @relation(fields: [campaignId], references: [id])
    campaignId Int
}

model User {
    id          Int         @id @default(autoincrement())
    name        String
    email       String?     @unique
    password    String?     @unique
    Profile     Profile[]
    character   Character[] @relation(fields: [characterId], references: [id])
    characterId Int
}

model Character {
    id       Int        @id @default(autoincrement())
    urlPath  String
    Campaign Campaign[]
    User     User       @relation(fields: [userId], references: [id])
    userId   Int
}

model Campaign {
    id          Int       @id @default(autoincrement())
    name        String
    desc        String
    character   Character @relation(fields: [characterId], references: [id])
    characterId Int
    Profile     Profile[]
}
